<Page x:Class="Konstantinova41.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Konstantinova41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>

        
         <TextBlock Text="Логин" Grid.Column="0" Grid.Row="0" FontSize="30" VerticalAlignment="Bottom" HorizontalAlignment="Center"></TextBlock>
        <TextBox Name="LoginTB" Grid.Column="1" Grid.Row="0" Width="300" Height="30" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Center"></TextBox>

        <TextBlock Text="Пароль" Grid.Column="0" Grid.Row="1" FontSize="30" VerticalAlignment="Bottom" HorizontalAlignment="Center"></TextBlock>
        <TextBox Name="PassTB"  Grid.Column="1" Grid.Row="1" Width="300" Height="30" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Center"></TextBox>

        <Button Content="Войти как гость" Name="LogInButtonGuest" Click="LogInButtonGuest_Click" Grid.Column="0" Grid.Row="2"></Button>
        <Button Content="Войти" Name="LoginBtn" Click="LoginBtn_Click" Grid.Column="1" Grid.Row="2"></Button>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
            <TextBlock Name="captchOneWord" FontSize="22" Margin="30,0,0,0"></TextBlock>
            <TextBlock Name="captchTwoWord" TextDecorations="Strikethrough" FontSize="22" Margin="0,5,0,0"></TextBlock>
            <TextBlock Name="captchThreeWord" TextDecorations="Strikethrough" FontSize="22"></TextBlock>
            <TextBlock Name="captchFourWord" TextDecorations="Strikethrough" FontSize="22" Margin="0,10,0,0"></TextBlock>
        </StackPanel>
        <TextBox Grid.Column="1" Grid.Row="2" Name="CaptchaTB" FontSize="20" Width="150" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30,35,0,0" Visibility="Collapsed"
         ToolTip="Введите каптчу"></TextBox>
    </Grid>
</Page>
