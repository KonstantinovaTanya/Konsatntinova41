<Page x:Class="Konstantinova41.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Konstantinova41"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPage" FontFamily="Comic Sans MS">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#FFFFCC99" Margin="0"></Grid>
        <Grid Grid.Row="1" Background="#FFFFCC99" Margin="0"></Grid>
        <Grid Grid.Row="2" Background="#FFFFCC99" Margin="0"></Grid>
        
        <StackPanel  Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Вы авторизованы как: " FontSize="20" VerticalAlignment="Center"></TextBlock>
                <TextBlock x:Name="FIOTB" Text="" FontSize="20" VerticalAlignment="Center"></TextBlock>
            </StackPanel>

            <StackPanel Name="RoleSP" Orientation="Horizontal" Margin="10">
                <TextBlock Text="Роль: " FontSize="20" VerticalAlignment="Center"></TextBlock>
                <TextBlock x:Name="RoleTB" Text="" FontSize="20" VerticalAlignment="Center"></TextBlock>
            </StackPanel>
        </StackPanel>

        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">

            <StackPanel Margin="10" Orientation="Horizontal">
                <TextBlock Text="Введите текст для поиска" FontSize="20" VerticalAlignment="Center"></TextBlock>
                <TextBox Name="TBoxSearch" TextChanged="TBoxSearch_TextChanged" Width="300" Height="30" FontSize="15" HorizontalAlignment="Center"></TextBox>
            </StackPanel>

            <StackPanel Margin="10" Orientation="Horizontal">
                <TextBlock Text="Выберите скидку для поиска" FontSize="20" VerticalAlignment="Center"></TextBlock>
                <ComboBox Name="ComboType" SelectionChanged="ComboType_SelectionChanged" Width="200" Height="30" FontSize="15">
                    <TextBlock>Все</TextBlock>
                    <TextBlock>от 0 до 9,99%</TextBlock>
                    <TextBlock>от 10 до 14,99%</TextBlock>
                    <TextBlock>от 15 и более</TextBlock>
                </ComboBox>
            </StackPanel>

            <StackPanel Margin="10" Orientation="Vertical">
                <RadioButton Content="По возрастанию стоимости" Name="RBtnUp" GroupName="Sort" Checked="RBtnUp_Checked" Width="300" FontSize="20"></RadioButton>
                <RadioButton Content="По убыванию стоимости" Name="RBtnDown" GroupName="Sort" Checked="RBtnDown_Checked" Width="300" FontSize="20"></RadioButton>
            </StackPanel>
            
            
        </WrapPanel>

        <TextBlock Name="TBlockRecordCount" Grid.Row="2" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"/>


        <ListView Name="ProductListView" Grid.Row="3" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="ProductListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="500"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Image Grid.Column="0" Grid.RowSpan="4" HorizontalAlignment="Center" Stretch="UniformToFill" Width="200">
                            <Image.Source>
                                <Binding Path="ProductPhotoPath">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            Res/picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <TextBlock Text="{Binding ProductName}" Grid.Column="1" Grid.Row="0" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Text="{Binding ProductDescription}" Grid.Column="1" Grid.Row="1" FontSize="18" HorizontalAlignment="Left" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Text="{Binding ProductManufacturer}" Grid.Column="1" Grid.Row="2" FontSize="18" HorizontalAlignment="Left"></TextBlock>
                        <TextBlock Text="{Binding ProductCost, StringFormat={}{0:0} рублей}" Grid.Column="1" Grid.Row="3" FontSize="18" HorizontalAlignment="Left"></TextBlock>

                        <TextBlock Text="Скидка" Grid.Column="2" Grid.Row="0" FontSize="20" HorizontalAlignment="Left"></TextBlock>
                        <TextBlock Text="{Binding ProductDiscountAmount, StringFormat={}{0} %}" Grid.Column="2" Grid.Row="1" Grid.RowSpan="3" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
